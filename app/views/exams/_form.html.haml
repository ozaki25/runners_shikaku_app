= form_for @exam do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :time_of_category
    = f.number_field :time_of_category
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
